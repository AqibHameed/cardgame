<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>

<fieldset>
  <legend>Edit <%= resource_name.to_s.humanize %></legend>

  <div class="form-group">
    <%= f.label :email, class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 10, class: "form-control" %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
  <%= f.label :password, , "New password" ,class: 'col-lg-2 control-label' %>
  <i>(leave blank if you don't want to change it)</i><br />
  <div class="col-lg-4">
    <%= f.password_field :password, autocomplete: "new-password", size: 25, class: "form-control" %> <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em> <% end %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "Confirm new password", class: 'col-lg-2 control-label' %>
  <div class="col-lg-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :current_password, "Current Password", class: 'col-lg-2 control-label' %>
  <i>(we need your current password to confirm your changes)</i><br />
  <div class="col-lg-4">
    <%= f.password_field :current_password, autocomplete: "new-password", size: 25, class: "form-control" %>
  </div>
</div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Update", class: 'btn btn-primary' %>   
    </div>
  </div>
</fieldset>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back, class: "btn btn-primary" %>
