  <%= devise_error_messages! %>


  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>

  <fieldset>
  	<legend>Resend confirmation instructions</legend>



  	<div class="form-group">
  		<%= f.label :email,class: 'col-lg-2 control-label' %>
  		<div class="col-lg-4">
  			<%= f.email_field :email, autofocus: true, autocomplete: "email", size: 10, class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  		</div>
  	</div>

  	<div class="form-group">
  		<div class="col-lg-10 col-lg-offset-2">
  			<%= f.submit "Resend confirmation instructions", class: 'btn btn-primary' %>   
  		</div>
  	</div>

  </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
