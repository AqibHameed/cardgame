<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

<fieldset>
  <legend>Log in</legend>

  <div class="form-group">
    <%= f.label :email, class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 10, class: "form-control" %>
    </div>
  </div>

      <div class="form-group">
    <%= f.label :password, class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.email_field :password, autocomplete: "current-password", size: 25, class: "form-control" %>
    </div>
  </div>


  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <%= f.label :remember_me, class: 'col-lg-2 control-label' %>
    <div class="col-lg-4">
      <%= f.email_field :remember_me, class: "form-control" %>
    </div>
  </div>
  <% end -%>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Log In", class: 'btn btn-primary' %>   
    </div>
  </div>

</fieldset>
<% end %>

<%= render "devise/shared/links" %>
