<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

  <fieldset>
    <legend>Log in</legend>

    <div class="form-group">
      <%= f.label :user_name, class: 'col-md-2 ' %>
      <div class="col-md-4">
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'col-md-2 ' %>
      <div class="col-md-4">
        <%= f.password_field :password, autocomplete: "current-password", size: 25, class: "form-control" %>
      </div>
    </div>


    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.label :remember_me, class: 'col-md-2' %>
        <div class="col-md-4">
           <%= f.check_box :remember_me, class: '' %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Log In", class: 'btn btn-primary' %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </fieldset>
  <% end %>

</div>