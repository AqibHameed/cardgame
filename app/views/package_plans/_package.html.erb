<div class="row">
  <% @packages.each do |pack|%>
    <div class="col-lg-3 col-md-6 col-12 data-panels">
    <div class="card <%= if pack.game.gamename == 'Ace Of Spades'
                           'green-card'
                         else
                           'uncard'
                         end %>">
      <div class="card-header <%= if pack.game.gamename== 'Ace Of Spades'
                                    'green-panel'
                                  elsif pack.game.gamename== 'King Of Spades'
                                    'un-panel'
                                  elsif pack.game.gamename== 'Queen Of Spades'
                                    'blue-panel'
                                  else
                                    'dark-panel'
                                  end %>">
        <%= pack.game.gamename %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Playing Time</li>
        <li class="list-group-item">
          <%= pack.numberofgames %>
          <br>
          <strong>US$<%= pack.amount %></strong>
        </li>
        <li class="list-group-item">
          <%= link_to  image_tag('btn_buynowCC_LG.gif'), {:controller => 'subcriptions', :action => 'new', :package_plan_id => pack.id}, :method => :get %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>



















